{
    // TODO: use env var for each dependancies
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-GNinja",
                "-DALIVE2_BUILD_DIR=$HOME/git/alive2/build",
                "-DALIVE2_SOURCE_DIR=$HOME/git/alive2",
                "-DCMAKE_PREFIX_PATH=$HOME/git/llvm-project/buildcegss",
                "-DLIBOAI_SOURCE_DIR=$HOME/git/liboai",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "shell",
            "label": "ninja",
            "command": "ninja",
            "args": [
                "-Cbuild",
            ],
            "group": {
                "kind": "build",
            },
            "dependsOn": [
                "cmake",
            ]
        },
        {
            "type": "shell",
            "label": "opt run",
            "command": "source .env && $HOME/git/llvm-project/buildcegss/bin/opt -S -passes=cegss -load-pass-plugin /home/khei4/git/cegss/build/libcegss.so --debug < input.ll > output.ll",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
                }
            },
            "dependsOn": [
                "cmake",
                "ninja",
            ],
            "dependsOrder": "sequence",
        },
    ],
    "version": "2.0.0"
}