{
    // TODO: use env var for each dependancies
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-GNinja",
                "-DLLVM_BUILD_DIR=$HOME/git/llvm-project-16/build",
                "-DALIVE2_BUILD_DIR=$HOME/alive2/build",
                "-DALIVE2_SOURCE_DIR=$HOME/alive2",
                "-DCMAKE_PREFIX_PATH=$HOME/git/llvm-project-16/build",
                "-DLIBOAI_SOURCE_DIR=$HOME/git/liboai",
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "shell",
            "label": "ninja",
            "command": "ninja",
            "args": [
                "-Cbuild",
            ],
            "group": {
                "kind": "build",
            },
            "dependsOn": [
                "cmake",
            ]
        },
        {
            "type": "shell",
            "label": "opt run",
            "command": "$HOME/git/llvm-project-16/build/bin/opt -S -passes=cegss -load-pass-plugin /home/khei4/git/cegss/build/libcegss.so --debug < input.ll > output.ll",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "version": "2.0.0"
}